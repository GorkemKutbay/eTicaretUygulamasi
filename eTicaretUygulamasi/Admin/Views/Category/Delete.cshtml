@model Admin.Models.CategoryDeleteViewModel

@{
    ViewData["Title"] = "Kategori Sil";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <h1 class="h3 mb-4 text-gray-800">Kategoriyi Sil</h1>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">

                    @ViewBag.DeleteError

                </div>
            }

            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-warning">
                    @ViewBag.SuccessMessage
                </div>

                <a asp-controller="Home" asp-action="Index" class="btn btn-info">
                    Ana Sayfaya Dön
                </a>
            }

            @if (Model != null && ViewBag.SuccessMessage == null)
            {
                @if (ViewBag.Warning != null)
                {
                    <div class="alert alert-danger">
                        <strong>Dikkat!</strong> @ViewBag.Warning
                    </div>
                }
                <div class="alert alert-warning">
                    <strong>Dikkat!</strong> Bu Kategoriyi silmek istediğinize emin misiniz?
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Kategori Bilgileri</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-hover">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>@Model.Id</td>
                                </tr>
                                <tr>
                                    <th>Kategori Adı</th>
                                    <td>@Model.CategoryName</td>
                                </tr>
                                <tr>
                                    <th>Üretilme Tarihi</th>
                                    <td>@Model.DateTime</td>
                                </tr>
                            </tbody>
                        </table>

                        <form method="post"
                              asp-action="Delete"
                              asp-controller="Category"
                              asp-route-id="@Model.Id">

                            @if (ViewBag.HasProducts == true)
                            {
                                <input type="hidden" name="forceDelete" value="true" />
                            }

                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-danger">
                                    Evet, Sil
                                </button>

                                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                                    İptal
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            }

        </div>
    </div>
</div>