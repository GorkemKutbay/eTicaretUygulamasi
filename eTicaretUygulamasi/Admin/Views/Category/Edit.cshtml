@model Admin.Models.CategoryEditViewModel

@{
    ViewData["Title"] = "Kategori Düzenle";
}

<link rel="stylesheet" href="~/ogani/css/font-awesome.min.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/category-form.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/category-edit.css" asp-append-version="true" />

<!-- Page Hero -->
<div class="page-hero">
    <div class="container">
        <h1><i class="fa fa-pencil-square-o" style="margin-right:10px;"></i>Kategori Düzenle</h1>
        <div class="breadcrumb-nav">
            <a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Ana Sayfa</a>
            <span>/</span>
            <span>Kategori Düzenle</span>
        </div>
    </div>
</div>

<!-- Form Section -->
<div class="form-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">

                <div asp-validation-summary="All" class="validation-alert" style="display:none;"></div>

                <div class="form-card">
                    <div class="form-card-header">
                        <div class="header-icon"><i class="fa fa-pencil"></i></div>
                        <div>
                            <h5>Kategori Bilgilerini Güncelle</h5>
                            <p>Aşağıdaki alanları düzenleyerek kategoriyi güncelleyin.</p>
                        </div>
                    </div>
                    <div class="form-card-body">
                        <form method="post" asp-action="Edit">

                            <input asp-for="Id" type="hidden" />

                            <div class="field-group">
                                <label class="field-label" asp-for="Name">
                                    <i class="fa fa-tag"></i> Kategori Adı
                                </label>
                                <input asp-for="Name" class="field-input" type="text" placeholder="Örn: Elektronik" />
                                <span asp-validation-for="Name" class="field-error"></span>
                            </div>

                            <hr class="divider" />

                            <div class="field-group">
                                <label class="field-label" asp-for="Color">
                                    <i class="fa fa-paint-brush"></i> Renk
                                </label>
                                <input asp-for="Color" class="field-input" type="text" placeholder="Örn: primary, success, danger" />
                                <span class="field-hint">Bootstrap renk adı: primary · success · info · warning · danger</span>
                                <span asp-validation-for="Color" class="field-error"></span>
                            </div>

                            <hr class="divider" />

                            <div class="field-group">
                                <label class="field-label" asp-for="IconCssClass">
                                    <i class="fa fa-star"></i> İkon CSS Sınıfı
                                </label>
                                <input asp-for="IconCssClass" class="field-input" type="text" placeholder="Örn: fa fa-fw fa-bolt" />
                                <span class="field-hint">FontAwesome ikon sınıfı giriniz.</span>
                                <span asp-validation-for="IconCssClass" class="field-error"></span>
                            </div>

                            <hr class="divider" />

                            <div style="display:flex; align-items:center; padding-top:8px;">
                                <button type="submit" class="btn-action">
                                    <i class="fa fa-refresh"></i> Güncelle
                                </button>
                                <a asp-controller="Home" asp-action="Index" class="btn-cancel">
                                    <i class="fa fa-times"></i> İptal
                                </a>
                            </div>

                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @if (TempData["SuccessMessage"] != null)
    {
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            Swal.fire({
                title: 'Güncellendi!',
                text: '@Html.Raw(TempData["SuccessMessage"])',
                icon: 'success',
                confirmButtonText: 'Tamam',
                confirmButtonColor: '#f4a62a'
            });
        </script>
    }
}
