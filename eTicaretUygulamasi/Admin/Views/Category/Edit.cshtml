@model Admin.Models.CategoryEditViewModel

@{
    ViewData["Title"] = "Kategori Düzenle";
}

<h1>Kategori Düzenle</h1>

<div asp-validation-summary="All" class="alert alert-danger" style="display:none"></div>

@* asp-action="Edit" → formun POST edeceği URL *@
<form method="post" asp-action="Edit">

    @* Id gizli input: kullanıcı görmez ama POST verisiyle gönderilir.
       Hangi kategoriyi güncellediğimizi bilmek için şart. *@
    <input asp-for="Id" type="hidden" />

    <div class="mb-3">
        <label asp-for="Name">Kategori Adı</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Color">Renk</label>
        <input asp-for="Color" class="form-control" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="IconCssClass">İkon CSS Sınıfı</label>
        <input asp-for="IconCssClass" class="form-control" />
        <span asp-validation-for="IconCssClass" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a href="/Home/Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    @if (TempData["SuccessMessage"] != null)
    {
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            Swal.fire({
                title: 'Güncellendi!',
                text: '@Html.Raw(TempData["SuccessMessage"])',
                icon: 'success',
                confirmButtonText: 'Tamam'
            });
        </script>
    }
}
