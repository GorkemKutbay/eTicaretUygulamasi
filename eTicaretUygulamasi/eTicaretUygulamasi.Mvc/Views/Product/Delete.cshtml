@model eTicaretUygulamasi.Mvc.Models.ProductDeleteViewModel

@{
    ViewData["Title"] = "Ürünü Sil";
}

<div class="container mt-5 mb-5 p-4 bg-white shadow-lg rounded">

    <h3 class="fw-bold text-dark">Ürünü Sil</h3>
    <hr class="border-success border-3 opacity-100 mb-4" style="width: 60px;" />

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger shadow-sm border-0">@ViewBag.ErrorMessage</div>
    }

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success shadow-sm border-0">@ViewBag.SuccessMessage</div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-success fw-bold text-uppercase rounded-0 px-4 py-2 mt-2">Ana Sayfaya Dön</a>
    }

    @if (Model != null && ViewBag.SuccessMessage == null)
    {
        <div class="alert alert-warning shadow-sm border-0 fw-semibold">
            Bu ürünü silmek istediğinize emin misiniz? Bu işlem geri alınamaz.
        </div>

        <div class="table-responsive mt-4 mb-4">
            <table class="table table-bordered border-light align-middle">
                <tbody>
                    <tr>
                        <th class="bg-light text-dark w-25">Ürün Adı</th>
                        <td><strong class="text-success">@Model.DDName</strong></td>
                    </tr>
                    <tr>
                        <th class="bg-light text-dark">Fiyat</th>
                        <td class="fw-bold text-dark">@Model.Price.ToString("C2")</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-dark">Kategori</th>
                        <td class="text-secondary">@Model.CategoryName</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-dark">Stok</th>
                        <td class="text-secondary">@Model.StockAmount Adet</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
            <button type="submit" class="btn btn-danger fw-bold text-uppercase rounded-0 px-4 py-2">Evet, Sil</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-light border fw-bold text-uppercase rounded-0 px-4 py-2 ms-2">İptal</a>
        </form>
    }

</div>