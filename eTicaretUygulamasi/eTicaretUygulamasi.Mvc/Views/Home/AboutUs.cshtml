@{
    ViewData["Title"] = "About Us";
}
<section class="hero hero-normal">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <partial name="_CategoriesPartial" />
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+65 11.188.888</h5>
                            <span>support 24/7 time</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>About Us</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                        <span>About Us</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="about spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="about__pic">
                    <img src="/img/about.jpg" alt="">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about__text">
                    <div class="section-title">
                        <span>About Our Store</span>
                        <h2>Fresh Organic Products</h2>
                    </div>
                    <p>
                        We provide high quality organic vegetables and fruits directly from local farmers.
                        Our mission is to deliver healthy and fresh food to your doorstep.
                    </p>
                    <p>
                        Ogani is built on trust, sustainability and customer satisfaction.
                        We believe healthy life starts with healthy food.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="feature spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="feature__item">
                    <i class="fa fa-truck"></i>
                    <h5>Free Shipping</h5>
                    <p>Free delivery on all orders over $50</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="feature__item">
                    <i class="fa fa-leaf"></i>
                    <h5>Always Fresh</h5>
                    <p>100% organic certified products</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="feature__item">
                    <i class="fa fa-headphones"></i>
                    <h5>24/7 Support</h5>
                    <p>We are always here for you</p>
                </div>
            </div>
        </div>
    </div>
</section>