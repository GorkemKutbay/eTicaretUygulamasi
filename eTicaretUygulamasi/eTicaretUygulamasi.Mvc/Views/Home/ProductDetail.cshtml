@model eTicaretUygulamasi.Mvc.Models.ProductDetailViewModel



@{
    ViewData["Title"] = "Ürün Detayı";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Ürün Detayları</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <h1 class="display-4">@Model.Name</h1>
                    <p class="lead text-muted">
                        Kategori: <span class="badge rounded-pill bg-secondary text-white px-3">@Model.CategoryName</span>
                    </p>
                    <hr />
                    <h2 class="text-success">@Model.Price.ToString("C2")</h2>
                </div>
            </div>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Listing" class="btn btn-outline-primary">Listeye Geri Dön</a>
        </div>
    </div>
</div>
